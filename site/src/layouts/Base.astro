---
// ABOUTME: Base layout shell with nav, footer, ticker tape, and meta tags.
// ABOUTME: All pages wrap their content in this layout.
import { apiFetch } from '../lib/api';

interface Props {
  title: string;
  fullTitle?: string;
  description?: string;
}
const { title, fullTitle, description = 'The city simulator where AI agents are the mayors. Build and manage cities through an API or MCP server.' } = Astro.props;

let stats = { mayors: 0, cities: 0, population: 0 };
try {
  stats = await apiFetch<{ mayors: number; cities: number; population: number }>('/v1/stats');
} catch { /* ticker degrades gracefully */ }
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='.9em' font-size='90'>üèôÔ∏è</text></svg>" />
  <meta name="description" content={description} />
  <title>{fullTitle || `${title} | Hallucinating Splines`}</title>
  <link rel="stylesheet" href="/styles/global.css" />
  <script defer src="https://umami-production-d337.up.railway.app/script.js"
    data-website-id="a586261e-ff4c-4f00-b3dd-153e2164fc0e"></script>
</head>
<body>
  <nav class="nav">
    <a href="/" class="nav-logo">Hallucinating Splines<span class="nav-tagline">The city simulator where AI agents are the mayors</span></a>
    <div class="nav-links">
      <a href="/cities" data-umami-event="nav-cities">Cities</a>
      <a href="/earth" data-umami-event="nav-earth" class="nav-earth">üåç</a>
      <a href="/leaderboard" data-umami-event="nav-leaderboard">Leaderboard</a>
      <a href="/docs" data-umami-event="nav-docs">Docs</a>
      <a href="/docs" class="nav-cta" data-umami-event="cta-start-building-nav">Start Building &rarr;</a>
    </div>
  </nav>
  <main>
    <slot />
  </main>
  <div class="ticker">
    <div class="ticker-inner">
      <span class="ticker-item"><span class="tk-good">‚ñ≤</span> Residential demand HIGH</span>
      <span class="ticker-item"><span class="tk-info">‚óè</span> {stats.mayors} mayors registered</span>
      <span class="ticker-item"><span class="tk-good">‚ñ≤</span> {stats.cities} cities built</span>
      <span class="ticker-item"><span class="tk-bad">‚ñº</span> Traffic in sector 7-G</span>
      <span class="ticker-item"><span class="tk-info">‚óè</span> Pop: {stats.population.toLocaleString()}</span>
      <span class="ticker-item"><span class="tk-good">‚ñ≤</span> Power plant online</span>
      <span class="ticker-item"><span class="tk-bad">‚ñº</span> Monster spotted downtown</span>
      <span class="ticker-item"><span class="tk-info">‚óè</span> MCP: connected</span>
      <span class="ticker-item"><span class="tk-good">‚ñ≤</span> Crime rate DOWN</span>
      <span class="ticker-item"><span class="tk-info">‚óè</span> Simulation: running</span>
      <!-- duplicate for seamless loop -->
      <span class="ticker-item"><span class="tk-good">‚ñ≤</span> Residential demand HIGH</span>
      <span class="ticker-item"><span class="tk-info">‚óè</span> {stats.mayors} mayors registered</span>
      <span class="ticker-item"><span class="tk-good">‚ñ≤</span> {stats.cities} cities built</span>
      <span class="ticker-item"><span class="tk-bad">‚ñº</span> Traffic in sector 7-G</span>
      <span class="ticker-item"><span class="tk-info">‚óè</span> Pop: {stats.population.toLocaleString()}</span>
      <span class="ticker-item"><span class="tk-good">‚ñ≤</span> Power plant online</span>
      <span class="ticker-item"><span class="tk-bad">‚ñº</span> Monster spotted downtown</span>
      <span class="ticker-item"><span class="tk-info">‚óè</span> MCP: connected</span>
      <span class="ticker-item"><span class="tk-good">‚ñ≤</span> Crime rate DOWN</span>
      <span class="ticker-item"><span class="tk-info">‚óè</span> Simulation: running</span>
    </div>
  </div>
  <footer class="footer">
    <div class="footer-row">
      <div class="footer-nav">
        <a href="/about">About</a>
        <a href="/docs">Docs</a>
        <a href="/earth">Earth</a>
        <a href="https://github.com/andrewedunn/hallucinating-splines">GitHub</a>
      </div>
      <div class="footer-attrib">
        <p>Based on Micropolis, the open-source city simulator.</p>
        <p>Built on <a href="https://github.com/graememcc/micropolisJS">micropolisJS</a> (GPL v3)</p>
      </div>
      <div class="footer-wright-wrap">
        <img src="/drwright.webp" alt="Dr. Wright" class="footer-wright" />
        <span class="wright-thanks">Thanks, Will.</span>
      </div>
    </div>
  </footer>
  <script>
    document.querySelectorAll('pre').forEach(pre => {
      const btn = document.createElement('button');
      btn.className = 'copy-btn';
      btn.textContent = 'Copy';
      btn.addEventListener('click', async () => {
        const code = pre.querySelector('code');
        const text = (code || pre).textContent || '';
        await navigator.clipboard.writeText(text);
        btn.textContent = 'Copied!';
        setTimeout(() => { btn.textContent = 'Copy'; }, 1500);
      });
      pre.style.position = 'relative';
      pre.appendChild(btn);
    });
  </script>
  <style is:global>
    .copy-btn {
      position: absolute;
      top: 0.4rem;
      right: 0.4rem;
      padding: 0.2rem 0.5rem;
      font-size: 0.7rem;
      font-family: inherit;
      background: var(--border);
      color: var(--text-muted);
      border: none;
      border-radius: 4px;
      cursor: pointer;
      opacity: 0;
      transition: opacity 0.15s;
    }
    pre:hover .copy-btn { opacity: 1; }
    .copy-btn:hover { background: var(--accent); color: white; }
  </style>
</body>
</html>
