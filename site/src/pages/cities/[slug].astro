.city-action-btn { font-family: var(--pixel-font); font-size: 0.5rem; padding: 0.4rem 0.8rem; background: var(--accent); color: var(--text); border: 1px solid var(--accent); border-radius: 2px; cursor: pointer; transition: background 0.15s, border-color 0.15s; white-space: nowrap; }
.city-action-btn:hover { background: var(--accent-hover); border-color: var(--accent-hover); }
.city-action-menu { position: absolute; top: calc(100% + 0.4rem); left: 0; background: var(--bg-raised); border: 1px solid var(--border); border-radius: 4px; padding: 0.35rem 0; min-width: 180px; z-index: 100; box-shadow: 0 4px 12px var(--shadow); }
.city-action-item { display: flex; align-items: center; gap: 0.5rem; padding: 0.45rem 0.75rem; font-family: var(--system); font-size: 0.8rem; color: var(--text-muted); background: none; border: none; cursor: pointer; width: 100%; text-align: left; white-space: nowrap; text-decoration: none; }
.city-action-item:hover { background: var(--surface); color: var(--text); }
.city-action-item svg { flex-shrink: 0; }
